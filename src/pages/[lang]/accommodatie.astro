---

<Layout title={`Accommodatie - Logies De Reiziger`}>
    <div class="bg-primary text-white py-16">
        <div class="container mx-auto px-4 text-center">
            <h1 class="font-serif text-4xl font-bold mb-4">{t.title}</h1>
            <p class="text-xl max-w-2xl mx-auto opacity-90">{t.intro}</p>
        </div>
    </div>

    <section class="py-20">
        <div class="container mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-12">
                {
                    t.rooms.map((room, index) => (
                        <div class="bg-white rounded-lg shadow-lg overflow-hidden border border-gray-100 flex flex-col md:flex-row">
                            <div class="md:w-2/5 relative h-64 md:h-auto min-h-[300px]">
                                <img
                                    src={room.image}
                                    alt={room.name}
                                    class="absolute inset-0 w-full h-full object-cover"
                                />
                            </div>
                            <div class="p-8 md:w-3/5 flex flex-col justify-center">
                                <h3 class="font-serif text-2xl font-bold text-primary mb-3">
                                    {room.name}
                                </h3>
                                <p class="text-gray-600 mb-6">{room.desc}</p>
                                <ul class="grid grid-cols-1 sm:grid-cols-2 gap-2 mb-6 text-sm text-gray-500">
                                    {room.amenities.map((item) => (
                                        <li class="flex items-center">
                                            <span class="mr-2 text-accent">
                                                {" "}
                                                ✓{" "}
                                            </span>{" "}
                                            {item}
                                        </li>
                                    ))}
                                </ul>
                                <a
                                    href={
                                        index === 0
                                            ? getRelativeLocaleUrl(
                                                  lang,
                                                  "kamer/tweepersoonskamer-1",
                                              )
                                            : index === 1
                                              ? getRelativeLocaleUrl(
                                                    lang,
                                                    "kamer/familiekamer",
                                                )
                                              : index === 2
                                                ? getRelativeLocaleUrl(
                                                      lang,
                                                      "kamer/tweepersoonskamer-2",
                                                  )
                                                : getRelativeLocaleUrl(
                                                      lang,
                                                      "kamer/tweepersoonskamer-3",
                                                  )
                                    }
                                    class="inline-block text-center bg-primary text-white py-3 px-6 rounded hover:bg-opacity-90 transition-colors w-full md:w-auto self-start"
                                >
                                    Bekijk details & foto's
                                </a>
                            </div>
                        </div>
                    ))
                }
            </div>
        </div>
    </section>

    <section class="bg-secondary py-20">
        <div class="container mx-auto px-4 max-w-4xl text-center">
            <h2 class="font-serif text-3xl font-bold text-primary mb-8">
                {t.facilitiesTitle}
            </h2>
            <div class="flex flex-wrap justify-center gap-4">
                {
                    t.facilities.map((fac) => (
                        <span class="bg-white px-6 py-2 rounded-full shadow-sm text-gray-700 font-medium border border-gray-200">
                            {fac}
                        </span>
                    ))
                }
            </div>
            <div class="mt-16 bg-white p-8 rounded-lg shadow-md">
                <h3 class="font-serif text-2xl font-bold mb-4">
                    {t.priceTitle}
                </h3>
                <p class="text-gray-600 mb-6">{t.priceText}</p>
                <a
                    href={getRelativeLocaleUrl(lang, "beschikbaarheid")}
                    class="inline-block bg-accent text-white py-3 px-8 rounded hover:bg-yellow-600 transition-colors"
                >
                    {t.bookBtn}
                </a>
            </div>
        </div>
    </section>
</Layout>

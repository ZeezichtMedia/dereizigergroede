---
import Layout from "../../../layouts/Layout.astro";
import Lightbox from "../../../components/common/Lightbox.astro";
import BookingSidebar from "../../../components/rooms/BookingSidebar.astro";
import RoomGallery from "../../../components/rooms/RoomGallery.astro";
import { getRelativeLocaleUrl } from "../../../i18n/utils";
import { galleryImages } from "../../../data/images";

export function getStaticPaths() {
    return [
        { params: { lang: "nl" } },
        { params: { lang: "en" } },
        { params: { lang: "de" } },
    ];
}

const { lang } = Astro.params;

// Using specific images as requested: 6, 9, 41, 4
const roomImages = [
    galleryImages[6],
    galleryImages[9],
    galleryImages[41] || galleryImages[0],
    galleryImages[4],
].filter(Boolean);

const t = {
    title: "Tweepersoonskamer met Eigen Badkamer",
    size: "25 m²",
    views: ["Uitzicht op een bezienswaardigheid", "Uitzicht op de stad"],
    mainFeatures: [
        "Eigen badkamer",
        "Geluidsisolatie",
        "Koffiezetapparaat",
        "Gratis WiFi",
    ],
    bed: "1 groot tweepersoonsbed",
    rating: "Comfortabele bedden, 7,7 - Gebaseerd op 110 beoordelingen",
    description: `De tweepersoonskamer is voorzien van geluidsisolerende muren, een koffie- en theezetapparaat, en een eigen badkamer met douche en haardroger. De ruimte beschikt over 1 groot bed.`,
    bathroomFeatures: [
        "Wc",
        "Bad of douche",
        "Handdoeken",
        "Föhn",
        "Toiletpapier",
    ],
    roomFacilities: [
        "Houten vloeren of parketvloeren",
        "Beddengoed",
        "Stopcontact bij het bed",
        "Kinderstoel",
        "Zithoek",
        "Geluidsisolatie",
        "Koelkast",
        "Koffiezetapparaat",
        "Thee- en koffiefaciliteiten",
        "Magnetron",
        "Verwarming",
        "Keukengerei",
        "Ventilator",
        "Elektrische waterkoker",
        "Wasdroger",
        "(Kleding)kast",
        "Eethoek",
        "Eettafel",
        "Bovenverdiepingen alleen bereikbaar per trap",
        "Kledingrek",
        "Droogrek voor kleding",
        "Stopcontactbeschermers voor kinderen",
        "Bordspellen/puzzels",
        "Desinfecterende handgel",
    ],
    nosoSmoking: "Roken niet toegestaan",
    bookBtn: "Bekijk beschikbaarheid",
};
---

<Layout title={`${t.title} - Logies De Reiziger`}>
    <!-- Split Hero Section -->
    <section class="container mx-auto px-4 py-8 md:py-12">
        <div
            class="grid grid-cols-1 md:grid-cols-5 gap-8 lg:gap-12 items-center"
        >
            <!-- Left: Content & Context -->
            <div
                class="order-2 md:order-1 md:col-span-3 md:pr-6 lg:pr-12 animate-fade-up"
                style="animation-delay: 0.1s;"
            >
                <nav class="flex items-center text-sm text-gray-500 mb-6">
                    <a
                        href={getRelativeLocaleUrl(lang, "/")}
                        class="hover:text-primary transition-colors">Home</a
                    >
                    <svg
                        class="w-3 h-3 mx-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path></svg
                    >
                    <a
                        href={getRelativeLocaleUrl(lang, "accommodatie")}
                        class="hover:text-primary transition-colors"
                        >Accommodatie</a
                    >
                    <svg
                        class="w-3 h-3 mx-2"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M9 5l7 7-7 7"></path></svg
                    >
                    <span class="text-gray-900 font-medium truncate"
                        >{t.title}</span
                    >
                </nav>

                <h1
                    class="font-serif text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight tracking-tight text-balance"
                >
                    {t.title}
                </h1>

                <div class="flex flex-wrap items-center gap-4 mb-8">
                    <div
                        class="flex items-center bg-green-50 text-green-700 px-3 py-1 rounded-full text-sm font-medium"
                    >
                        <svg
                            class="w-4 h-4 mr-1.5"
                            fill="currentColor"
                            viewBox="0 0 20 20"
                            ><path
                                d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"
                            ></path></svg
                        >
                        7,7 (110 reviews)
                    </div>
                    <div
                        class="flex items-center text-gray-600 text-sm font-medium px-3 py-1 bg-gray-100 rounded-full"
                    >
                        <svg
                            class="w-4 h-4 mr-1.5"
                            fill="none"
                            stroke="currentColor"
                            viewBox="0 0 24 24"
                            ><path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="2"
                                d="M4 8V4m0 0h4M4 4l5 5m11-1V4m0 0h-4m4 0l-5 5M4 16v4m0 0h4m-4 0l5-5m11 5l-5-5m5 5v-4m0 4h-4"
                            ></path></svg
                        >
                        {t.size}
                    </div>
                </div>

                <p
                    class="text-xl text-gray-600 leading-relaxed mb-8 border-l-4 border-primary pl-4 italic"
                >
                    "Een oase van rust in het centrum. Perfect voor een
                    ontspannen verblijf."
                </p>
            </div>

            <!-- Right: Sharp Image (Original Ratio) -->
            <div
                class="order-1 md:order-2 md:col-span-2 relative group animate-fade-up"
                style="animation-delay: 0.3s;"
            >
                <div
                    class="absolute inset-0 bg-primary/5 transform rotate-3 rounded-2xl transition-transform duration-700 group-hover:rotate-1"
                >
                </div>
                <!-- Parallax Image Wrapper -->
                <div
                    class="relative w-full h-auto rounded-2xl shadow-soft overflow-hidden"
                >
                    <img
                        src={roomImages[0]}
                        alt={t.title}
                        class="w-full h-full object-cover parallax-img origin-center will-change-transform"
                        data-speed="0.08"
                    />
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <section
        class="py-12 md:py-20 animate-fade-up"
        style="animation-delay: 0.5s;"
    >
        <div class="container mx-auto px-4">
            <div class="flex flex-col lg:flex-row gap-12 lg:gap-20">
                <!-- Left Column: Story & Details -->
                <div class="lg:w-2/3 order-2 lg:order-1">
                    <!-- Key Highlights (Icons) -->
                    <div
                        class="grid grid-cols-2 md:grid-cols-4 gap-6 mb-12 py-8 border-y border-gray-100"
                    >
                        <div
                            class="flex flex-col items-center text-center gap-2 text-gray-700"
                        >
                            <div
                                class="p-3 bg-primary/5 rounded-full text-primary"
                            >
                                <!-- Icon: Bed -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-6 h-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M5 20v-8H2v8h20v-8h-3v8H5zm14-10a4 4 0 00-4-4H9a4 4 0 00-4 4v2h14v-2z"
                                    ></path></svg
                                >
                            </div>
                            <span class="text-sm font-medium">1 Groot Bed</span>
                        </div>
                        <div
                            class="flex flex-col items-center text-center gap-2 text-gray-700"
                        >
                            <div
                                class="p-3 bg-primary/5 rounded-full text-primary"
                            >
                                <!-- Icon: Users -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-6 h-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"
                                    ></path></svg
                                >
                            </div>
                            <span class="text-sm font-medium">2 Personen</span>
                        </div>
                        <div
                            class="flex flex-col items-center text-center gap-2 text-gray-700"
                        >
                            <div
                                class="p-3 bg-primary/5 rounded-full text-primary"
                            >
                                <!-- Icon: Wifi -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-6 h-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M8.111 16.404a5.5 5.5 0 017.778 0M12 20h.01m-7.08-7.071c3.904-3.905 10.236-3.905 14.141 0M1.394 9.393c5.857-5.857 15.355-5.857 21.213 0"
                                    ></path></svg
                                >
                            </div>
                            <span class="text-sm font-medium">Gratis WiFi</span>
                        </div>
                        <div
                            class="flex flex-col items-center text-center gap-2 text-gray-700"
                        >
                            <div
                                class="p-3 bg-primary/5 rounded-full text-primary"
                            >
                                <!-- Icon: Shower -->
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-6 h-6"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="1.5"
                                        d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                                    ></path></svg
                                >
                            </div>
                            <span class="text-sm font-medium"
                                >Prive Badkamer</span
                            >
                        </div>
                    </div>

                    <!-- Description -->
                    <div class="prose prose-lg text-gray-600 mb-16">
                        <h2
                            class="font-serif text-2xl font-bold text-gray-900 mb-6"
                        >
                            Over deze kamer
                        </h2>
                        <p class="leading-relaxed">{t.description}</p>
                        <p>
                            Geniet van het prachtige uitzicht en de rust. Deze
                            kamer is perfect voor koppels die op zoek zijn naar
                            comfort en sfeer in hartje Groede.
                        </p>
                    </div>

                    <!-- Amenities Lists -->
                    <div class="grid md:grid-cols-2 gap-12 mb-16">
                        <div>
                            <h3
                                class="font-bold text-lg text-gray-900 mb-4 flex items-center gap-2"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-5 h-5 text-accent"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"
                                    ></path></svg
                                >
                                Badkamer faciliteiten
                            </h3>
                            <ul class="space-y-3">
                                {
                                    t.bathroomFeatures.map((item) => (
                                        <li class="flex items-start text-gray-600 text-sm">
                                            <svg
                                                class="w-5 h-5 text-green-500 mr-2 shrink-0"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M5 13l4 4L19 7"
                                                />
                                            </svg>
                                            {item}
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                        <div>
                            <h3
                                class="font-bold text-lg text-gray-900 mb-4 flex items-center gap-2"
                            >
                                <svg
                                    xmlns="http://www.w3.org/2000/svg"
                                    class="w-5 h-5 text-accent"
                                    fill="none"
                                    viewBox="0 0 24 24"
                                    stroke="currentColor"
                                    ><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"
                                    ></path><path
                                        stroke-linecap="round"
                                        stroke-linejoin="round"
                                        stroke-width="2"
                                        d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"
                                    ></path></svg
                                >
                                Uitzicht & Extra's
                            </h3>
                            <ul class="space-y-3">
                                {
                                    t.views.map((item) => (
                                        <li class="flex items-start text-gray-600 text-sm">
                                            <svg
                                                class="w-5 h-5 text-green-500 mr-2 shrink-0"
                                                fill="none"
                                                stroke="currentColor"
                                                viewBox="0 0 24 24"
                                            >
                                                <path
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    stroke-width="2"
                                                    d="M5 13l4 4L19 7"
                                                />
                                            </svg>
                                            {item}
                                        </li>
                                    ))
                                }
                            </ul>
                        </div>
                    </div>

                    <!-- Full Facilities List -->
                    <div class="bg-gray-50 rounded-2xl p-8 mb-16">
                        <h3 class="font-bold text-lg text-gray-900 mb-6">
                            Alle faciliteiten
                        </h3>
                        <ul
                            class="grid grid-cols-1 md:grid-cols-2 gap-x-8 gap-y-3"
                        >
                            {
                                t.roomFacilities.map((item) => (
                                    <li class="flex items-center text-gray-600 text-sm">
                                        <span class="w-1.5 h-1.5 bg-gray-400 rounded-full mr-3 shrink-0" />
                                        {item}
                                    </li>
                                ))
                            }
                        </ul>
                    </div>

                    <!-- Secondary Gallery Grid -->
                    <RoomGallery
                        images={roomImages.slice(1)}
                        title="Sfeerimpressie"
                    />
                </div>

                <!-- Right Column: Sticky Sidebar / Booking -->
                <div class="lg:w-1/3 order-1 lg:order-2">
                    <BookingSidebar
                        price="€ 95"
                        lang={lang}
                        bookBtnText={t.bookBtn}
                        noSmokingText={t.nosoSmoking}
                    />
                </div>
            </div>
        </div>
    </section>

    <div class="mt-20">
        <Lightbox />
    </div>

    <script>
        import { initParallax } from "../../../scripts/parallax";
        import { initLightbox } from "../../../scripts/lightbox";

        document.addEventListener("astro:page-load", () => {
            initParallax();
            initLightbox(".lightbox-trigger");
        });
    </script>
</Layout>

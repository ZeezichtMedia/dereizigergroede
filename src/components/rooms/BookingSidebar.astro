---
import { getRelativeLocaleUrl, useTranslations } from "../../i18n/utils";

interface Props {
    price: string;
    lang: string;
    bookBtnText: string;
    noSmokingText: string;
}

const { price, lang, bookBtnText, noSmokingText } = Astro.props;
const t = useTranslations(lang as any);
---

<div class="sticky top-24 space-y-6">
    <div
        class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100 p-6 md:p-8"
    >
        <div class="text-sm text-gray-500 mb-1">Vanaf prijs per nacht</div>
        <div class="flex items-baseline gap-2 mb-6">
            <span class="text-3xl font-bold text-primary">{price}</span>
            <span class="text-gray-400 font-light">/ nacht</span>
        </div>

        <a
            href={getRelativeLocaleUrl(lang, "beschikbaarheid")}
            class="flex items-center justify-center w-full bg-primary text-white py-4 rounded-xl font-bold text-lg hover:bg-opacity-90 transition-all shadow-lg hover:shadow-xl transform hover:-translate-y-0.5 mb-4"
        >
            {t("nav.availability")}
        </a>

        <a
            href={getRelativeLocaleUrl(lang, "contact")}
            class="flex items-center justify-center w-full bg-blue-50 text-blue-600 py-3 rounded-xl font-medium hover:bg-blue-100 transition-colors"
        >
            {t("nav.contact")}
            <svg
                xmlns="http://www.w3.org/2000/svg"
                class="w-4 h-4 ml-2"
                viewBox="0 0 24 24"
                fill="none"
                stroke="currentColor"
                stroke-width="2"
                stroke-linecap="round"
                stroke-linejoin="round"
                ><path
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path></svg
            >
        </a>

        <div
            class="mt-6 pt-6 border-t border-gray-100 text-sm text-gray-500 space-y-3"
        >
            <div class="flex items-center gap-3">
                <svg
                    class="w-5 h-5 text-green-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path></svg
                >
                Directe bevestiging
            </div>
            <div class="flex items-center gap-3">
                <svg
                    class="w-5 h-5 text-green-500"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                    ><path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M5 13l4 4L19 7"></path></svg
                >
                <!-- Fix: Text is now INSIDE the flex container -->
                Gratis annuleren (zie voorwaarden)
            </div>
        </div>
        <div class="flex items-center gap-3 text-sm text-gray-500 mt-3">
            <svg
                class="w-5 h-5 text-red-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M18.364 18.364A9 9 0 005.636 5.636m12.728 12.728A9 9 0 015.636 5.636m12.728 12.728L5.636 5.636"
                ></path></svg
            >
            {noSmokingText}
        </div>
    </div>
</div>

<!-- Help Box -->
<div class="bg-primary/5 rounded-2xl p-6 border border-primary/10 mt-6">
    <h4 class="font-bold text-gray-900 mb-2">Hulp nodig?</h4>
    <p class="text-sm text-gray-600 mb-4">
        Bel ons gerust voor vragen of speciale verzoeken.
    </p>
    <a
        href={`tel:+31612345678`}
        class="text-primary font-bold flex items-center hover:underline"
    >
        <svg
            xmlns="http://www.w3.org/2000/svg"
            class="w-4 h-4 mr-2"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
            ></path></svg
        >
        +31 6 1234 5678
    </a>
</div>

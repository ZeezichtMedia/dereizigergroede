---
import {
    getLangFromUrl,
    useTranslations,
    getRelativeLocaleUrl,
} from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
const currentYear = new Date().getFullYear();

const links = [
    { label: "nav.home", href: "" },
    { label: "nav.accommodation", href: "accommodatie" },
    { label: "nav.surroundings", href: "omgeving" },
    { label: "nav.gallery", href: "gallerij" },
    { label: "nav.availability", href: "beschikbaarheid" },
    { label: "nav.contact", href: "contact" },
];
---

<footer class="bg-primary text-white border-t border-white/10">
    <div class="container mx-auto px-4 py-16">
        <div
            class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-12 gap-12 lg:gap-8"
        >
            <!-- Brand Column (5 cols) -->
            <div class="lg:col-span-5 space-y-6">
                <a href={getRelativeLocaleUrl(lang, "")} class="block mb-6">
                    <img
                        src="/logo.png"
                        alt="Logies De Reiziger"
                        class="h-24 w-auto brightness-0 invert opacity-90 hover:opacity-100 transition-opacity"
                    />
                </a>
                <p class="text-gray-400 leading-relaxed max-w-sm">
                    {t("footer.brandText")}
                </p>
            </div>

            <!-- Links Column (3 cols) -->
            <div class="lg:col-span-3">
                <h3
                    class="text-lg font-serif font-bold text-white mb-6 relative inline-block"
                >
                    {t("footer.links")}
                    <span class="absolute -bottom-2 left-0 w-12 h-0.5 bg-accent"
                    ></span>
                </h3>
                <ul class="space-y-3">
                    {
                        links.map((link) => (
                            <li>
                                <a
                                    href={getRelativeLocaleUrl(lang, link.href)}
                                    class="text-gray-400 hover:text-accent transition-colors flex items-center group"
                                >
                                    <span class="w-1.5 h-1.5 rounded-full bg-accent/50 mr-3 group-hover:bg-accent transition-colors" />
                                    {t(link.label as any)}
                                </a>
                            </li>
                        ))
                    }
                </ul>
            </div>

            <!-- Contact Column (4 cols) -->
            <div class="lg:col-span-4">
                <h3
                    class="text-lg font-serif font-bold text-white mb-6 relative inline-block"
                >
                    Contact
                    <span class="absolute -bottom-2 left-0 w-12 h-0.5 bg-accent"
                    ></span>
                </h3>
                <ul class="space-y-4">
                    <li class="flex items-start space-x-3">
                        <svg
                            class="w-5 h-5 text-accent flex-shrink-0 mt-1"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"
                            ></path>
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                        </svg>
                        <span class="text-gray-400"
                            >Markt 2<br />4503 AG Groede<br />Nederland</span
                        >
                    </li>
                    <li class="flex items-center space-x-3">
                        <svg
                            class="w-5 h-5 text-accent flex-shrink-0"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                            ></path>
                        </svg>
                        <a
                            href="tel:+31640839547"
                            class="text-gray-400 hover:text-accent transition-colors"
                            >+31 6 4083 9547</a
                        >
                    </li>
                    <li class="flex items-center space-x-3">
                        <svg
                            class="w-5 h-5 text-accent flex-shrink-0"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                        >
                            <path
                                stroke-linecap="round"
                                stroke-linejoin="round"
                                stroke-width="1.5"
                                d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                            ></path>
                        </svg>
                        <a
                            href="mailto:info@logiesdereiziger.nl"
                            class="text-gray-400 hover:text-accent transition-colors"
                            >info@logiesdereiziger.nl</a
                        >
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <!-- Copyright Bar -->
    <div class="border-t border-white/10 bg-black/20">
        <div
            class="container mx-auto px-4 py-6 flex flex-col md:flex-row justify-between items-center text-sm text-gray-500"
        >
            <div class="text-center md:text-left mb-4 md:mb-0">
                <p>
                    {t("footer.copyright")} - <a
                        href="https://zee-zicht.nl"
                        target="_blank"
                        rel="noopener noreferrer"
                        class="hover:text-gray-300 transition-colors"
                        >{t("footer.madeBy")}</a
                    >
                </p>
            </div>
            <div class="flex space-x-6 mt-4 md:mt-0">
                <span
                    class="hover:text-gray-300 transition-colors cursor-pointer"
                    >{t("footer.privacy")}</span
                >
                <span
                    class="hover:text-gray-300 transition-colors cursor-pointer"
                    >{t("footer.cookies")}</span
                >
            </div>
        </div>
    </div>
</footer>
```
